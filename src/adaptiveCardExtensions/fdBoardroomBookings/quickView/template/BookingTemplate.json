{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "This week's meetings:",
      "weight": "Bolder",
      "size": "Medium",
      "wrap": true
    },
    {
      "type": "Container",
      "$data": "${allBookings}",
      "items": [
        {
          "type": "TextBlock",
          "text": "**${title}**",
          "weight": "Bolder",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "üìç Boardroom: ${roomName}",
          "wrap": true,
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "üè¢ Office Location: ${officeLocation}",
          "wrap": true,
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "üóìÔ∏è Start Date Time: ${startDateTime}",
          "wrap": true,
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "üóìÔ∏è End Date Time: ${endDateTime}",
          "wrap": true,
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "---",
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "No meetings scheduled for this week.",
      "isVisible": "${allBookings.length == 0}",
      "wrap": true,
      "weight": "Bolder"
    }
  ]
}
